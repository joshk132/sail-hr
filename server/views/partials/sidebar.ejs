    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="<%= url %> " width="48" height="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= sidebarName %></div>
                    <div class="email"><%= currentUser.email %></div>
                    <div class="btn-group user-helper-dropdown">
                        <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right">
                            <% if (currentUser.role == "company") { %>
                            <li><a href="/company/profile"><i class="material-icons">person</i>Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/company/settings"><i class="material-icons">settings</i>Settings</a></li>
                            <% } else { %>
                            <li><a href="/profile"><i class="material-icons">person</i>Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/user/settings"><i class="material-icons">settings</i>Settings</a></li>
                            <% } %>
                            <li role="separator" class="divider"></li>
                            <li><a href="/logout"><i class="material-icons">input</i>Sign Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">MAIN NAVIGATION</li>
                    <% if(currentUser.role === 'company'){ %>
                    <li><a href="/"><i class="material-icons">home</i><span>Home</span></a></li>
                    <li><a href="/users"><i class="material-icons">face</i><span>Show All Users</span></a></li>
                    <li><a href="/user/create"><i class="material-icons">person_add</i><span>Create a new user</span></a></li>
                    <li><a href="/company/billing"><i class="material-icons">monetization_on</i><span>Billing</span></a></li>
                    <li><a href="/company/settings"><i class="material-icons">settings</i><span>Settings</span></a></li>
                    <% } else if (currentUser.role === 'hr' || currentUser.role === 'hrManager') { %>
                    <li><a href="/profile"><i class="material-icons">person</i><span>Profile</span></a></li>
                    <li><a href="/user/settings"><i class="material-icons">settings</i><span>Settings</span></a></li>
                    <li><a href="/users"><i class="material-icons">face</i><span>Show All Users</span></a></li>
                    <% } else if (currentUser.role === 'employee') { %>
                    <li><a href="/profile"><i class="material-icons">person</i><span>Profile</span></a></li>
                    <li><a href="/user/settings"><i class="material-icons">settings</i><span>Settings</span></a></li>
                    <% } %>
                    <li class="header">LABELS</li>
                    <li><a href="javascript:void(0);"><i class="material-icons col-red">donut_large</i><span>Important</span></a></li>
                    <li><a href="javascript:void(0);"><i class="material-icons col-amber">donut_large</i><span>Warning</span></a></li>
                    <li><a href="javascript:void(0);"><i class="material-icons col-light-blue">donut_large</i><span>Information</span></a></li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    <a href="javascript:void(0);">Sail HR </a>&copy; 2018.
                </div>
                <div class="version">
                    <b>Version: </b> 0.1.0
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
        
    </section>